<Page x:Class="MinatoProject.PCSCSampleWpf.Views.Pages.WriterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MinatoProject.PCSCSampleWpf.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:MinatoProject.PCSCSampleWpf.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="960"
      Title="{Binding PageTitle}"
      d:DataContext="{d:DesignInstance Type={x:Type vm:WriterPageViewModel}, IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--デバイス選択領域-->
        <Grid Grid.Row="0" Margin="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0 0 4 0" VerticalAlignment="Center">
                    <ui:TextBlock>Device:</ui:TextBlock>
                </Grid>
                <Grid Grid.Column="1" Margin="4 0 0 0" VerticalAlignment="Center">
                    <ComboBox ItemsSource="{Binding Readers, Mode=OneWay}" SelectedItem="{Binding SelectedReader}" />
                </Grid>
            </Grid>
        </Grid>
        
        <!--MSB/LSB入力領域-->
        <Grid Grid.Row="1" Margin="4">
            <StackPanel Orientation="Horizontal">
                <ui:TextBlock VerticalAlignment="Center" Margin="0 0 4 0">MSB:</ui:TextBlock>
                <ui:NumberBox x:Name="tbMSB" PlaceholderText="MSB" Minimum="0" Text="{Binding MostSignificantBit}" Margin="0 0 8 0" />
                <ui:TextBlock VerticalAlignment="Center" Margin="0 0 4 0">LSB:</ui:TextBlock>
                <ui:NumberBox x:Name="tbLSB" PlaceholderText="LSB" Minimum="0" Text="{Binding LeastSignificantBit}" />
            </StackPanel>
        </Grid>
        
        <!--書き込みデータ入力領域-->
        <Grid Grid.Row="2" Margin="4">
            <ui:TextBox PlaceholderText="e.g. 10-11-12-13" Text="{Binding InputData}" />
        </Grid>
        
        <!--書き込みボタン領域-->
        <Grid Grid.Row="3" Margin="4">
            <ui:Button Command="{Binding UpdateBinaryCommand}" Content="Update Binary" Padding="24,12" />
        </Grid>

        <!--表示領域-->
        <Grid Grid.Row="4" Margin="4">
            <ui:TextBox Text="{Binding ResultText}"
                VerticalScrollBarVisibility="Visible"
                HorizontalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                ClearButtonEnabled="False" />
        </Grid>
    </Grid>
</Page>
